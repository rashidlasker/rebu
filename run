#!/bin/bash

for i in "$@"
do
case $i in
  start)
  echo "starting application"
  docker start mysql
  sudo docker-compose build
  docker-compose up &
  ./start_spark.sh
  ;;
  restart)
  echo "restarting application"
  docker-compose down
  sudo docker-compose build
  docker-compose up &
  ./start_spark.sh
  ;;
  stop)
  echo "stopping application"
  docker-compose down
  docker stop mysql
  docker network rm db_network
  ;;
  start-prod)
  echo "starting application"
  docker start mysql
  sudo docker-compose -f docker-compose.prod.yml build
  docker-compose -f docker-compose.prod.yml up &
  ./start_spark.sh
  ;;
  restart-prod)
  echo "restarting application"
  docker-compose -f docker-compose.prod.yml down
  sudo docker-compose -f docker-compose.prod.yml build
  docker-compose -f docker-compose.prod.yml up &
  ./start_spark.sh
  ;;
  stop-prod)
  echo "stopping application"
  docker-compose -f docker-compose.prod.yml down
  docker stop mysql
  docker network rm db_network
  ;;
  mysql)
  docker stop mysql
  docker stop mysql-cmdline
  docker rm mysql
  docker rm mysql-cmdline
  docker network rm db_network
  docker network create db_network
  sudo rm -rf db
  mkdir db
  docker run --name mysql -d -e MYSQL_ROOT_PASSWORD='$3cureUS' -v `pwd`/db:/var/lib/mysql mysql:5.7.23
  sleep 10
  docker network connect db_network mysql
  sleep 10
  docker run -it --name mysql-cmdline --link mysql:db mysql:5.7.23 mysql -uroot -p'$3cureUS' -h db -e "CREATE USER 'www'@'%' IDENTIFIED BY '\$3cureUS'; CREATE DATABASE cs4501 CHARACTER SET utf8; GRANT ALL PRIVILEGES ON *.* TO 'www'@'%';"
  ;;
  help)
  echo "valid commands are start, restart, and stop for development and start-prod, restart-prod, and stop-prod for production, as well as mysql to set up the database"
  ;;
  *)
  echo "That is not an option, try ./run help for help"
  ;;
esac
done

